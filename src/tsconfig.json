{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "sourceMap": false,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "declaration": true,
        "noLib": false,
        "noEmitHelpers": true,
        "experimentalDecorators": true,
        "noEmitOnError": false,
        "lib": [
            "dom",
            "es6"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ]
        },
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "typings/android.d.ts",
        "**/*.spec.ts"
    ]
}
