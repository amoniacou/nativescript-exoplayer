{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "sourceMap": false,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "declaration": true,
        "noLib": false,
        "noEmitHelpers": true,
        "experimentalDecorators": true,
        "noEmitOnError": false,
        "lib": [
            "es2017",
            "dom",
            "es6"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ]
        },
        "skipLibCheck": true
    },
    "files": [
        "references.d.ts",
        "videoplayer.d.ts",
        "videoplayer-common.ts",
        "videoplayer.ios.ts",
        "videoplayer.android.ts",
        "subtitle-source/subtitle-source-common.ts",
        "subtitle-source/subtitle-source.ios.ts",
        "subtitle-source/subtitle-source.android.ts",
        "video-source/video-source-common.ts",
        "video-source/video-source.ios.ts",
        "video-source/video-source.android.ts"
    ],
    "exclude": [
        "node_modules",
        "typings/android.d.ts",
        "**/*.spec.ts"
    ]
}
